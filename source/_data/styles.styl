// background

body:before{
  content:"";
  display:block;
  position:fixed;
  top:0;
  left:0;
  bottom: 0;
  z-index:-1;
  width:100%;
  height:100vh;
  background:url(../images/background.jpg) center 0 no-repeat;
  background-size:cover;
}

@media only screen and (max-width: 1000px) and (max-aspect-ratio: 0.51) {
  body:before{
  content:"";
  display:block;
  position:fixed;
  top:0;
  left:0;
  bottom: 0;
  z-index:-1;
  width:100%;
  height:100vh;
  background:url(../images/background_mobile.jpg) center 0 no-repeat;
  background-size:cover;
  }
}


// 主页文章添加阴影效果 
.post { 
	margin-top: 60px;
	margin-bottom: 60px;
	padding: 25px;
	-webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
	-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5); 
}

// page-opacity

.post-block {
  opacity: 0.85;
}

.sidebar {
  opacity: 0.85;
}

.header-inner {
  background: rgba(255,255,255,0.85);
  border-radius: 30px 30px 30px 30px; //菜单栏椭圆化 
}

.popup {
  opacity: 0.9;
}

